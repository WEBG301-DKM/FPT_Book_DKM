@model List<Category>

<div class="row pt-4 pb-4">
    <div class="col-6">
        <h1>List of Category</h1>
    </div>
    <div class="col-6">
        <a asp-controllder="Category" asp-action="Create" class="btn btn-primary">Create new Category</a>
        </div>
<table>
 <thead>
     <tr>
         <th>Name</th>
         <th>Description</th>
     </tr>
 </thead>
 <tbody>
     @foreach(var category in Model)
     {
     <tr>
         <td>@category.Name</td>
         <td>@category.Description<td>
         <td>
			<div class="btn group" role="group">
			    <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary">Edit</a>
				<a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-primary">Delete</a>
			</div>
		</td>
      </tr>
     }
 </tbody>
</table>
