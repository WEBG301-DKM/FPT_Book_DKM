@model Order

@{
    ViewData["Title"] = "Details";
}

<h1>Book Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Cover
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.Book.Cover" style="max-width:250px;width:100%"/>
        </dd>
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Model.Book.Name
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Model.Book.Description
        </dd>
        <dt class = "col-sm-2">
            Price
        </dt>
        <dd class = "col-sm-10">
            @Model.Book.Price
        </dd>
        <dt class = "col-sm-2">
            Author
        </dt>
        <dd class = "col-sm-10">
            @foreach (var author in Model.Book.BookAuthors)
            {
                <u>@author.Author.Alias</u><text> </text>
            }
        </dd>
        <dt class = "col-sm-2">
            Genre
        </dt>
        
        <dd class = "col-sm-10">
            @foreach (var category in Model.Book.BookCategories)
        {
                <u>@category.Category.Name</u><text> </text>
        }
        </dd>
    </dl>
</div>
<form  method="post">
  <div class="form-group">
    <input asp-for="BookId" hidden/>
    <input asp-for="Book.Price" hidden/>
  </div>
  <div class="form-group">
    <label asp-for="Quantity">Quantity</label>
    <input asp-for="Quantity" />
    <span asp-validation-for="Quantity" class="text-danger"></span>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
<div>
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}
