@model List<Request>

<h1>List of Request</h1>

<p>
    <a asp-controller="Request" asp-action="Create" class="btn btn-primary">Create Request for new category</a>
</p>
<table>
 <thead>
     <tr>
         <th>Name</th>
         <th>Description</th>
     </tr>
 </thead>
 <tbody>
     @foreach(var request in Model)
     {
     <tr>
         <td>@request.CategoryName</td>
         <td>@request.CategoryDescription<td>
         <td>
			<div class="btn group" role="group">
			    <a asp-area="Admin" asp-controller="Request" asp-action="Consider" asp-route-id="@request.Id" class="btn btn-primary">Respond</a>
		    </div>
		</td>
      </tr>
     }
 </tbody>
</table>