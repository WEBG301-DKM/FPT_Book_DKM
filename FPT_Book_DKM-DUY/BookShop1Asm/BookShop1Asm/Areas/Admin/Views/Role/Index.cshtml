@model List<Microsoft.AspNetCore.Identity.IdentityRole>

<h1>Role Manager</h1>
<form method="post" asp-action="AddRole" asp-controller="Role">
    <div class="input-group mb-3">
        <input name="roleName" class="form-control">
        <span class="input-group-btn">
            <button class="btn btn-info" type="submit">Add New Role</button>
        </span>
    </div>
</form>
<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                </tr>
            }
        </tbody>
    </table>
</div>
