@model List<Category>


<h1>List of Categories</h1>

<p>
    <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create new Category</a>
</p>
<table>
 <thead>
     <tr>
         <th>Name</th>
         <th>Description</th>
     </tr>
 </thead>
 <tbody>
     @foreach(var category in Model)
     {
     <tr>
         <td>@category.Name</td>
         <td>@category.Description<td>
         <td>
			<div class="btn group" role="group">
			    <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary">Edit</a>
				<a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-primary">Delete</a>
			</div>
		</td>
      </tr>
     }
 </tbody>
</table>
