@model Book

@{
    ViewData["Title"] = "Details";
}

<h1>Book Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Cover
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.Cover" style="max-width:250px;width:100%"/>
        </dd>
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Model.Name
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Model.Description
        </dd>
        <dt class = "col-sm-2">
            Price
        </dt>
        <dd class = "col-sm-10">
            @Model.Price
        </dd>
        <dt class = "col-sm-2">
            Author
        </dt>
        <dd class = "col-sm-10">
            @foreach (var author in Model.BookAuthors)
            {
                <u>@author.Author.Alias</u><text> </text>
            }
        </dd>
        <dt class = "col-sm-2">
            Genre
        </dt>
        
        <dd class = "col-sm-10">
            @foreach (var author in Model.BookCategories)
        {
                <u>@author.Category.Name</u><text> </text>
        }
        </dd>
    </dl>
</div>
@if(User.IsInRole("Customer")){
                <div>
                    <a asp-controller="Cart" asp-action="AddBookToCartInDetails" asp-route-id="@Model.Id" class="btn btn-info">Add To Cart</a>        
                </div>
                }
<div>
    <a asp-controller="Home" asp-action="Index" asp-area="Customer">Back to List</a>
</div>