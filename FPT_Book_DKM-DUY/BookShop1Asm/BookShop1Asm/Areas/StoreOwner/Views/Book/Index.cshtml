@model List<Book>
<!-- <partial name="_Notification"/> -->

<div class="row pt-4 pb-4">
    <div class="col-6">
        <h1>List of Book</h1>
    </div>
    <div class="col-6 text-right">
        <a asp-controller="Book" asp-action="CreateUpdate" class="btn btn-primary">Create New Book</a>
    </div>
</div>
<form asp-controller="Book" asp-action="Index" method="get" class="mb-3">
    <div class="form-group">
        <label for="catId">Category:</label>
        @Html.DropDownList("catId", (SelectList)ViewBag.Categories, "All", new { @class = "form-control" })
        <label for="search" class="ml-2">Title:</label>
        <input type="text" name="search" class="form-control" />
        <button type="submit" class="btn btn-primary ml-2">Find</button>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>Cover</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td><img src="@book.Cover" style="max-width:250px;width:100%" /></td>
                <td>@book.Name</td>
                <td>@book.Description</td>
                <td>@book.Price</td>
                <td>
                    <a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id" class="btn btn-info">Details</a>
                    <a asp-controller="Book" asp-action="CreateUpdate" asp-route-id="@book.Id" class="btn btn-warning">Edit</a>
                    <a asp-controller="Book" asp-action="Delete" asp-route-id="@book.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
