@model List<Author>
<!-- <partial name="_Notification"/> -->

<div class="container mt-4 mb-4">
    <div class="row">
        <div class="col-md-6">
            <h1 class="mb-3">List of Author</h1>
        </div>
        <div class="col-md-6 d-flex justify-content-md-end align-items-center">
            <a asp-controller="Author" asp-action="CreateUpdate" class="btn btn-primary">Create New Author</a>
        </div>
    </div>
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Photo</th>
                <th>Alias</th>
                <th>Info</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var author in Model)
            {
                <tr>
                    <td><img src="@author.Photo" class="img-fluid rounded" style="max-width:100px;" /></td>
                    <td>@author.Alias</td>
                    <td>@author.Info</td>
                    <td>
                        <a asp-controller="Author" asp-action="CreateUpdate" asp-route-id="@author.Id" class="btn btn-secondary btn-sm">Edit</a>
                        <a asp-controller="Author" asp-action="Delete" asp-route-id="@author.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

