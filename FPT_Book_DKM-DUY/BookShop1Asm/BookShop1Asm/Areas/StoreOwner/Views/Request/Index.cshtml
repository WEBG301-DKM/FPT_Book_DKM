@model List<Request>

<div class="container mt-4">
    <h1>List of Request</h1>
    <div class="mb-3">
        <a asp-controller="Request" asp-action="Create" class="btn btn-primary">Create Request for New Category</a>
    </div>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Status</th>
                <th>Admin Reply</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model)
            {
                <tr>
                    <td>@request.CategoryName</td>
                    <td>@request.CategoryDescription</td>
                    <td>@request.RequestStatus.Status</td>
                    <td>@request.Reason</td>
                </tr>
            }
        </tbody>
    </table>
</div>
